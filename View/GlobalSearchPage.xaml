<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheJobOrganizationApp.View.GlobalSearchPage"
             xmlns:viewmodels="clr-namespace:TheJobOrganizationApp.ViewModels"
             x:DataType="viewmodels:ScheldudeViewModel"
             Title="GlobalSearchPage">
    <Grid RowDefinitions="60,60,*" >
        <Grid ColumnDefinitions="*,60" Grid.Row="0">
            <Entry Grid.Column="0"></Entry>
            <Button Grid.Column="1"></Button>
        </Grid>
        <Grid ColumnDefinitions="400,*,240" Grid.Row="1" Margin="8" >
            <HorizontalStackLayout Spacing="8">
            <Button Text="Add"></Button>
            <Button Text="Delete"></Button>
            </HorizontalStackLayout>
            <Picker Grid.Column="2"
                    ></Picker>
        </Grid>
        <CollectionView Grid.Row="2"></CollectionView>
        
    </Grid>
</ContentPage>