<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TheJobOrganizationApp.ViewModels"
             x:DataType="viewmodels:ScheldudeViewModel"
             x:Class="TheJobOrganizationApp.ScheldudePage"
             xmlns:scheduler ="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler">
    <Grid ColumnDefinitions="30,240,240,*">
        <scheduler:SfScheduler Grid.Row="1"
                               Grid.ColumnSpan="4"
                               AllowedViews="Day,Week,Month"
                               AppointmentsSource="{Binding Controls.appointments}"/>

    </Grid>


</ContentPage>