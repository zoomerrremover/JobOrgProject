<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TheJobOrganizationApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TheJobOrganizationApp"
    xmlns:view="clr-namespace:TheJobOrganizationApp.View"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True"
    Shell.NavBarIsVisible="False">
    <TabBar>
        <ShellContent
        Title="Schedule"
        ContentTemplate="{DataTemplate local:ScheldudePage}"
        Route="ScheldudePage" />
        <ShellContent
        Title="Database"
        ContentTemplate="{DataTemplate view:GlobalSearchPage}"
        Route="GlobalSearchPage" />
        <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate view:SettingsPage}"
        Route="SettingsPage" />
    </TabBar>

</Shell>
